{{#d-modal-body title="merge-users.title"}}

    <p>{{i18n "merge-users.dialog.confirm" source=source.username target=target.username}}</p>

    <p>
        {{i18n "merge-users.dialog.source"}}
        {{#link-to 'adminUser' source}}
            {{avatar source imageSize="small"}}
            {{source.username}}
        {{/link-to}}
        {{#if source.name}}
            ({{source.name}})
        {{/if}}
    </p>

    <p>
        {{i18n "merge-users.dialog.target"}}
        {{#link-to 'adminUser' target}}
            {{avatar target imageSize="small"}}
            {{target.username}}
        {{/link-to}}
        {{#if target.name}}
            ({{target.name}})
        {{/if}}
    </p>

{{/d-modal-body}}

<div class='modal-footer'>
    {{d-button class="btn-primary" action=(action "confirm") label="merge-users.dialog.confirm-label"}}
    {{d-modal-cancel close=(route-action "closeModal") label="merge-users.dialog.cancel"}}
</div>